{{> message}}

<div class="container mt-5">
  <h1 class="mb-4 fw-bold">My Trips</h1>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h4>{{user.username}}'s Travels</h4>
    <a href="/trips/new" class="btn btn-dark">âž• Add New Trip</a>
  </div>

  {{#if trips.length}}
    <div class="row row-cols-1 row-cols-md-3 g-4">
      {{#each trips}}
        <div class="col">
          <div class="card h-100 shadow-sm">
            {{#if image_path}}
              <img src="{{image_path}}" class="card-img-top" alt="{{title}}" style="height: 200px; object-fit: cover;" />
            {{/if}}
            <div class="card-body">
              <h5 class="card-title">{{title}}</h5>
              <p class="card-subtitle text-muted">{{location}}</p>
              <p class="card-text mt-2">{{description}}</p>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <p>No trips posted yet. <a href="/trips/new">Create your first trip!</a></p>
  {{/if}}
</div>
