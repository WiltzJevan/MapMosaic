{{> message}}
<header>
    <h1 style="font: size 3em;">
        Welcome to Map Mosaic! 
    </h1>
    <h2>
        --This page is where the globe will be integrated
        <!--<div id="map" style="width: 100%; height: 500px;"></div>
        <script src="/js/globe.js"></script>-->

        <div id="globeViz" style="position: relative; width: 100vw; height: 100vh;">
            <script type="module" src="/resources/js/globe2.js"></script>

            <!-- Coordinates display -->
            <div id="live-coords" style="position: absolute; bottom: 10px; left: 10px; background: rgba(255,255,255,0.8); padding: 5px; z-index: 1000;">
                Lat: --, Lon: --
            </div>
            <!-- Form to add marker manually -->
            <div id="coord-ui" style="position: absolute; bottom: 10px; right: 10px; background: rgba(255,255,255,0.8); padding: 5px; z-index: 1000;">
                <input id="lat-input" type="text" placeholder="Latitude">
                <input id="lon-input" type="text" placeholder="Longitude">
                <br>
                <button onclick="addMarkerFromInput()">Add Marker</button>
            </div>
        </div>

        <div id="popup"></div>

    </h2>
</header>