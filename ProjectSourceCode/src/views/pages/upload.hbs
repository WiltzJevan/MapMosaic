<div class="auth-container">
  <div class="auth-card">
    <h2>Upload Trip</h2>

    {{#if message}}
      <div class="form-error">
        {{message}}
      </div>
    {{/if}}

    <form method="post" action="/upload">
      <div class="form-group">
        <label for="username">Email</label>
        <input type="text" name="username" id="username" placeholder="Email" required />
      </div>

      <div class="form-group">
        <label for="latitude">Latitude</label>
        <input type="text" name="latitude" id="latitude" placeholder="Latitude" required />
      </div>

      <div class="form-group">
        <label for="longitude">Longitude</label>
        <input type="text" name="longitude" id="longitude" placeholder="Longitude" required />
      </div>

      <div class="form-group">
        <label for="location_name">Location Name</label>
        <input type="text" name="location_name" id="location_name" placeholder="Location" required />
      </div>

      <button type="submit" class="login-btn w-100">Add Trip</button>
    </form>

  </div>
</div>