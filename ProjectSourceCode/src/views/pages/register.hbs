{{> message}}

<div class="auth-container">
  <div class="auth-card">
    <h2>Create your account</h2>
    <p>Join Map Mosaic and start your journey.</p>

    <form method="post" action="/register">
      <div class="form-group">
        <label for="username">Email</label>
        <input type="text" name="username" id="username" placeholder="Email" required />
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" id="password" placeholder="Password" required />
      </div>

      <button type="submit" class="login-btn w-100">Register</button>
    </form>

    <p class="text-center mt-3">Already on Map Mosaic? <a href="/login">Login</a></p>
  </div>
</div>
