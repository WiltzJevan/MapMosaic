{{> message}}

<!-- ðŸŽ¥ Fullscreen Video Background -->
<video autoplay muted loop playsinline class="bg-video">
  <source src="/videos/background.mp4" type="video/mp4" />
  Your browser does not support the video tag.
</video>

<!-- ðŸ“¬ Header Section -->
<section class="container my-5 position-relative z-3">
  <h1 class="text-center fw-bold text-glow-green mb-3">Get in Touch</h1>
  <p class="text-center subtitle-highlight mb-5">Have a question or idea? We'd love to hear from you.</p>
  
  <!-- ðŸ“¨ Contact Form Section -->
  <div class="contact-container">
    <div class="contact-card">
      <div class="contact-card-header">
        <i class="fas fa-paper-plane me-2"></i>
        <h4>Send Us a Message</h4>
      </div>
      <div class="contact-card-body">
        <form method="POST" action="/contact/submit">
          <div class="mb-4">
            <label for="name" class="form-label">
              <i class="fas fa-user me-2 text-glow-icon"></i>Your Name
            </label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Jane Doe" required />
          </div>
          
          <div class="mb-4">
            <label for="email" class="form-label">
              <i class="fas fa-envelope me-2 text-glow-icon"></i>Email Address
            </label>
            <input type="email" class="form-control" id="email" name="email" placeholder="you@example.com" required />
          </div>
          
          <div class="mb-4">
            <label for="message" class="form-label">
              <i class="fas fa-comment-alt me-2 text-glow-icon"></i>Message
            </label>
            <textarea class="form-control" id="message" name="message" rows="5" placeholder="Let us know how we can help..." required></textarea>
          </div>
          
          <button type="submit" class="btn btn-add-trip w-100">
            <i class="fas fa-paper-plane me-2"></i>Send Message
          </button>
        </form>
      </div>
    </div>
    
    <!-- Contact Information -->
    <div class="contact-info">      
      <div class="info-card">
        <div class="info-icon">
          <i class="fas fa-envelope"></i>
        </div>
        <div class="info-text">
          <h5>Email Us</h5>
          <p>mapmosaic3308@gmail.com</p>
        </div>
      </div>
      
      <div class="info-card">
        <div class="info-icon">
          <i class="fas fa-clock"></i>
        </div>
        <div class="info-text">
          <h5>Support Hours</h5>
          <p>Monday - Friday<br>9:00 AM - 5:00 PM EST</p>
        </div>
      </div>
    </div>
  </div>
</section>

